<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:background="#2b2b2b">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="84px"
        android:layout_marginRight="36px"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ivIcon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Name"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvAppVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:singleLine="true"
            android:text="Version"
            android:textColor="#999999"
            android:textSize="14sp"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="84px">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="126px"
            android:layout_height="54px"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="126px"
            android:layout_height="54px"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_bg_btn_update"
            android:gravity="center"
            android:text="@string/update"
            android:textColor="@drawable/selector_bg_text_update"
            android:textSize="18px"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/ivIcon"
        android:layout_alignParentBottom="true"
        android:background="#242424"/>
</RelativeLayout>